    #include <iostream>

using namespace std;


int main()
{

    int n;
    int r;

    cout << "Number of *: ";
    cin >>n;
    cout << "Number of rows: ";
    cin >>r;

    /* for ( init   ;    end cond     ;   step) {} */

    for (int j = 0; j<r; j++)
    {
        for (int i = 0; i < n; i++)
        {
            if ((0 == j)or (r - 1 == j) or
                    (0 == i) or (n - 1 ==i))
            {
                cout << "-";
            }
            else
            {
                cout <<"*" ;
            }

        }
        cout << endl;

    }

    return 0;


    /* HW ramka @ body reduva -  *   
    HW 4 triugylnika s ramka
    
    */
}

    
    
    
    
    
    

