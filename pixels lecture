#include <iostream>

using namespace std;


int main()
{

    int r = 0;


cout << "Number of rows: ";
cin >> r;

for (int j = 0; j<r; j++) {
    // cout << j;
    for (int i = 0; i <= j; i++) {
        cout <<"*";

    }
    cout  << endl;
}
}


